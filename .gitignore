# Ignore directories generated by Composer
/drush/contrib/
/vendor/
/web/core/
/web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/
/web/libraries/

# Hide env.settings.php
/web/sites/*/env.settings.php
/web/sites/*/dev.override.settings.php
/web/sites/*/prod.settings.php
/web/sites/*/stage.settings.php
!web/sites/*/settings.php

# Ignore Drupal's file directory
/web/sites/*/files/

# Ignore config files. Accordingly to bussines requirements we should not store
# configuration files in git.
/config/

# Ignore SimpleTest multi-site environment.
/web/sites/simpletest

# Ignore files generated by PhpStorm
/.idea/

# Ignore .env files as they are personal
/.env
/.editorconfig
/.gitattributes

.DS_Store
*.log
*.sql
*.sql.gz
