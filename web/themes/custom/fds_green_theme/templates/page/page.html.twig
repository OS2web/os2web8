<header class="d-print-none">

  {% if is_front %}
    <div class="custom-header custom-header--static">
      <div class="custom-header__inner">
        <div class="container">

          <!-- Begin - top -->
          <div class="flexy-row">

            <!-- Begin - below -->
            {{ page.header__top }}
            <!-- End - below -->

            <!-- Begin - searchtoggle -->
            <button class="custom-header__button custom-header__button--toggle-search js-toggle-searchy" aria-label="{{ 'Åbn søgning' | t }}">
              <span class="searchy-label">Søg</span>
            </button>
            <!-- End - searchtoggle -->

            <!-- Begin - toggle search -->
            <div class="searchy">
              {{ page.header__search }}
            </div>
            <!-- End - toggle search -->

            <div class="flexy-spacer d-sm-none"></div>

            <div class="flexy-spacer"></div>

            <!-- Begin - logo -->
            <a href="{{ url('<front>') }}" class="custom-header__logo">
              <img src="{{ base_path ~ directory }}/dist/images/logo.svg" alt="Logo" />
            </a>
            <!-- End - logo -->

          </div>
          <!-- End - top -->

          {% if theme_settings.texts.frontpage_banner_heading or theme_settings.texts.frontpage_banner_subheading %}
            <!-- Begin - meta -->
            <div class="custom-header__meta">
              <h1 class="h1">{{ theme_settings.texts.frontpage_banner_heading }}</h1>
              <h2 class="h4">{{ theme_settings.texts.frontpage_banner_subheading }}</h2>
            </div>
            <!-- End - meta -->
          {% endif %}

        </div>
      </div>
    </div>
  {% endif %}

  {% if not is_front %}
    <div class="custom-header custom-header--static">
      <div class="custom-header__inner">
        <div class="container">

          <!-- Begin - top -->
          <div class="flexy-row">

            <!-- Begin - below -->
            {{ page.header__top }}
            <!-- End - below -->

            <!-- Begin - searchtoggle -->
            <button class="custom-header__button custom-header__button--toggle-search js-toggle-searchy" aria-label="{{ 'Åbn søgning' | t }}">
              <span class="searchy-label">Søg</span>
            </button>
            <!-- End - searchtoggle -->

            <!-- Begin - toggle search -->
            <div class="searchy">
              {{ page.header__search }}
            </div>
            <!-- End - toggle search -->

            <div class="flexy-spacer d-sm-none"></div>

            <div class="flexy-spacer"></div>

            <!-- Begin - logo -->
            <a href="{{ url('<front>') }}" class="custom-header__logo">
              <img src="{{ base_path ~ directory }}/dist/images/logo.svg" alt="Logo" />
            </a>
            <!-- End - logo -->

          </div>
          <!-- End - top -->

          {% if theme_settings.texts.frontpage_banner_heading or theme_settings.texts.frontpage_banner_subheading %}
            <!-- Begin - meta -->
            <div class="custom-header__meta">
              <h1 class="h1">{{ theme_settings.texts.frontpage_banner_heading }}</h1>
              <h2 class="h4">{{ theme_settings.texts.frontpage_banner_subheading }}</h2>
            </div>
            <!-- End - meta -->
          {% endif %}

        </div>
      </div>
    </div>
  {% endif %}
</header>

{{ page.featured_top }}

<div class="page-container" id="font-resize-wrapper">
  <div class="container" id="main-content">
    {{ page.highlighted }}

    {% if not is_front %}
      <div class="region-action-buttons row d-print-none">
        <div class="col-12 col-md-3 d-none d-md-block">
          <a href="{{ url('<front>') }}" class="return-to-home-link">
            {{ 'Forside' | trans }}
          </a>
        </div>
        <div class="col-12 col-md-9 col--align-center">
          <div class="flexy-row">

            <div class="flexy-spacer"></div>

            {% include '@fds_green_theme/includes/action-buttons.html.twig' %}
          </div>
        </div>
      </div>
    {% endif %}
    <div class="row">

      <aside class="col-12 col-md-4 col-lg-4 col-xl-3">
        <div class="layout-sidebar-left">
          {{ page.sidebar_first }}
        </div>
      </aside>

      <main {{ content_attributes.addClass('col-12 col-md-8 col-lg-6 col-xl-6') }}>
        {{ page.content }}
      </main>

      <aside class="col-12 col-md-12 col-lg-2 col-xl-3 d-print-none">
        <div class="layout-sidebar-right">
          <div class="box">
            <div class="box__body">
              {{ page.sidebar_second }}
            </div>
          </div>
        </div>
      </aside>
    </div>
  </div>

  {{ page.featured_bottom_first }}
</div>

{% include '@fds_green_theme/includes/footer.html.twig' %}

<div class="d-none">
  {{ page.embedded_code }}
</div>

<script>

  // Add internet explorer class to <body>
  (function() {
    var ua = window.navigator.userAgent;
    var isIE = /MSIE|Trident/.test(ua);

    if(isIE) {
      document.documentElement.classList.add('ie');
    }
  })();
</script>
