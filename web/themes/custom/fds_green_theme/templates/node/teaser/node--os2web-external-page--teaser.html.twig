{%
  set classes = [
  'node--os2web-page--teaser',
  'element-wrapper-link',
  node.bundle|clean_class,
  node.isPromoted() ? 'is-promoted',
  node.isSticky() ? 'is-sticky',
  not node.isPublished() ? 'is-unpublished',
  view_mode ? view_mode|clean_class,
]
%}

<a href="{{ node.field_os2web_ep_url.value }}" {{ attributes.addClass(classes) }} aria-label="{{ 'Read more about' | trans }} {{ node.field_os2web_page_heading.value }}">
  <div class="teaser-title-wrap entity-{{ view_mode|clean_class }}__body">
  <div class="">
    {{ node.label }}
  </div>
    {# Begin - body #}
    {% set text = content.body | render %}
    <div class="field field--type-body">
      {{ text | striptags }}
    </div>
    {# End - body #}

    <div class="field--type-link">
      <div class="text-primary">
        {{ 'Read more' | t }}
      </div>
    </div>
  </div>
</a>

