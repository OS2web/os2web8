<!-- Begin - megamenu -->
<div class="custom-megamenu d-print-none">
  <div class="container-fluid">

    <!-- Begin - top row -->
    <div class="custom-megamenu__row custom-megamenu__row--top">
      <div class="row">

        <!-- Begin - language selector -->
        <div class="col-12 col-sm-3">
          {{ page.megamenu__language_selector }}
        </div>
        <!-- End - language selector -->

        <!-- Begin - search -->
        <div class="col-12 col-sm-6">
          {{ page.megamenu__search }}
        </div>
        <!-- End - search -->

        <!-- Begin - toggle megamenu -->
        <div class="col-12 col-sm-3">
          <div class="text-align-right">
            <button
              class="custom-megamenu__button custom-megamenu__button--toggle-megamenu js-toggle-megamenu">
              <span class="icon fa fa-times"></span>
            </button>
          </div>
        </div>
        <!-- End - toggle megamenu -->

      </div>
    </div>
    <!-- End - top row -->

    <!-- Begin - navigation -->
    <div class="custom-megamenu__row custom-megamenu__row--navigation">
      {{ page.megamenu__navigation }}
      {{ page.megamenu__selfservice }}
    </div>
    <!-- End - navigation -->

  </div>
</div>
<!-- End - megamenu -->

<header class="d-print-none">

  {% if is_front %}
    <div class="custom-header custom-header--static">
      <div class="custom-header__inner">
        <div class="container">

          <!-- Begin - top -->
          <div class="flexy-row">

            <!-- Begin - logo -->
            <a href="{{ url('<front>') }}" class="custom-header__logo">
              <img src="{{ base_path ~ directory }}/dist/images/logo.svg" alt="Logo" />
            </a>
            <!-- End - logo -->

            {% include '@fds_custom_theme/includes/action-buttons.html.twig' %}

            <div class="flexy-spacer"></div>

            <!-- Begin - toggle -->
            <button
              class="custom-header__button custom-header__button--toggle-megamenu js-toggle-megamenu">
              <span class="icon fa fa-bars"></span>
            </button>
            <!-- End - toggle -->

          </div>
          <!-- End - top -->

          {% if theme_settings.texts.frontpage_banner_heading or theme_settings.texts.frontpage_banner_subheading %}
            <!-- Begin - meta -->
            <div class="custom-header__meta">
              <h1 class="h1">{{ theme_settings.texts.frontpage_banner_heading }}</h1>
              <h2 class="h4">{{ theme_settings.texts.frontpage_banner_subheading }}</h2>
            </div>
            <!-- End - meta -->
          {% endif %}


          <!-- Begin - below -->
          {{ page.header__below }}
          <!-- End - below -->

        </div>
      </div>
    </div>
  {% endif %}

  {% if not is_front %}
    <div class="custom-header custom-header--fixed">
      <div class="custom-header__inner">
        <div class="container">
          <div class="flexy-row">

            <!-- Begin - logo -->
            <a href="{{ url('<front>') }}" class="custom-header__logo">
              <img src="{{ base_path ~ directory }}/dist/images/logo.svg" alt="Logo" />
            </a>
            <!-- End - logo -->

            <div class="flexy-spacer"></div>

            <!-- Begin - toggle search -->
            <div class="searchy">
              {{ page.header__search }}

              <button
                class="custom-header__button custom-header__button--toggle-search js-toggle-searchy">
                <span class="icon fa fa-search"></span>
              </button>
            </div>
            <!-- End - toggle search -->

            <!-- Begin - toggle -->
            <button
              class="custom-header__button custom-header__button--toggle-megamenu js-toggle-megamenu">
              <span class="icon fa fa-bars"></span>
            </button>
            <!-- End - toggle -->

          </div>
        </div>
      </div>
    </div>
  {% endif %}
</header>

{{ page.featured_top }}

<div class="container page-container" id="font-resize-wrapper">
  {% if not is_front %}
  <div class="row d-print-none">
    <div class="col-12 col-md-3">
      <a href="{{ url('<front>') }}" class="return-to-home-link">
        <span class="material-icons icon">
          keyboard_backspace
        </span>
        {{ 'Hjem' | trans }}
      </a>
    </div>
    <div class="col-12 col-md-9 col--align-center">
      <div class="flexy-row">
        {{ page.breadcrumb }}

        <div class="flexy-spacer"></div>

        {% include '@fds_custom_theme/includes/action-buttons.html.twig' %}
      </div>
    </div>
  </div>
  {% endif %}
  <div class="row">
    {#  Wayaround for determining visibility for regions with lazybuilder.
    @See https://www.drupal.org/project/drupal/issues/953034 for more info. #}
    {% set has_sidebar_first = page.sidebar_first|render|striptags|trim is not empty %}
    {% set has_sidebar_second = page.sidebar_second|render|striptags|trim is not empty %}
    {% if has_sidebar_first %}
      {% set sidebar_first_classes = [
        has_sidebar_first and has_sidebar_second ? 'col-12 col-md-3',
        has_sidebar_first and has_sidebar_second is empty ? 'col-12 col-md-3',
      ] %}
      <aside {{ attributes.addClass(sidebar_first_classes) }}>
        {{ page.sidebar_first }}
      </aside>
    {% endif %}

    {% set content_classes = [
      has_sidebar_first and has_sidebar_second ? 'col-12 col-md-6',
      has_sidebar_first and has_sidebar_second is empty ? 'col-12 col-md-6',
      has_sidebar_second and has_sidebar_first is empty ? 'col-12 col-md-6',
      has_sidebar_first is empty and has_sidebar_second is empty ? 'col-12 col-md-6'
    ] %}
    <main {{ content_attributes.addClass(content_classes) }}>
      {{ page.content }}
    </main>

    {% if has_sidebar_second %}
      {% set sidebar_second_classes = [
        has_sidebar_first and has_sidebar_second ? 'col-12 col-md-3',
        has_sidebar_first is empty and has_sidebar_second ? 'col-12 col-md-3',
      ] %}
      <aside {{ attributes.addClass(sidebar_second_classes) }}>
        {{ page.sidebar_second }}
      </aside>
    {% endif %}

  </div>
</div>

