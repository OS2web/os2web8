{%
  set classes = [
  'block',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class,
  'box',
]
%}
<div{{ attributes.addClass(classes) }}>
  <div class="box__body">
    {{ title_prefix }}
    {% if label %}
      <h2{{ title_attributes.addClass('h4') }}>{{ label }}</h2>
    {% endif %}
    {{ title_suffix }}
    {% block content %}
        {{ content }}
    {% endblock %}
  </div>
</div>
