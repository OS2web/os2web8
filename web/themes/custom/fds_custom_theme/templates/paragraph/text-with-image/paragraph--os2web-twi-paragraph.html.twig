{% set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  'paragraph--image-position--' ~ image_position,
  'clearfix',
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
] %}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}

      {# Begin - image #}
      {{ content.field_os2web_twi_image }}
      {# End - image #}

      {# Begin - heading #}
      {{ content.field_os2web_twi_heading }}
      {# End - heading #}

      {# Begin - subheading #}
      {{ content.field_os2web_twi_subheading }}
      {# End - subheading #}

      {# Begin - body #}
      {{ content.field_os2web_twi_body }}
      {# End - body #}

      {# Begin - link #}
      {{ content.field_os2web_twi_link }}
      {# End - link #}

    {% endblock %}
  </div>
{% endblock paragraph %}
