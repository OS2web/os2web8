{% set modalId = 'modal-' ~ random() %}
{%
  set classes = [
  'field',
  'field--name-' ~ field_name|clean_class,
  'field--type-' ~ field_type|clean_class,
  'field--label-' ~ label_display,
  view_mode ? 'field--view-mode--' ~ view_mode,
]
%}
{%
  set title_classes = [
  'field__label',
  label_display == 'visually_hidden' ? 'visually-hidden',
]
%}
{% if view_mode == 'os2web_gallery' %}
  <div{{ attributes.addClass(classes) }}>
    <div class="field__items photoswipe-gallery row">
      {% for item in items %}
        <div{{ item.attributes.addClass('field__item col-md-3') }}>{{ item.content }}</div>
      {% endfor %}
    </div>
  </div>
{% else %}
  <div{{ attributes.addClass(classes) }}>
    <div class="field__items">
      {% for item in items %}
        <div{{ item.attributes.addClass('field__item') }}>{{ item.content }}</div>
      {% endfor %}
    </div>
  </div>
{% endif %}
