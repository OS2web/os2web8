{%
  set classes = [
  'element-wrapper-link',
  node.bundle|clean_class,
  node.isPromoted() ? 'is-promoted',
  node.isSticky() ? 'is-sticky',
  not node.isPublished() ? 'is-unpublished',
  view_mode ? view_mode|clean_class,
]
%}
<a href="{{ url }}" {{ attributes.addClass(classes) }} aria-label="{{ 'Read more about' | trans }} {{ node.field_os2web_news_heading.value }}">
  <div class="row">
    <div class="entity-{{ view_mode|clean_class }}__image col-md-3 col-12">
      {{ content.field_os2web_news_primaryimage }}
    </div>

    <div class="entity-{{ view_mode|clean_class }}__body col-md-9 col-12">
      {{ content.field_os2web_news_article_date }}
      {{ content.field_os2web_news_heading }}

      {% set text = content.field_os2web_news_description | render %}
      <div class="field field--type-body">
        {{ text | striptags }}
      </div>

      <div class="field--type-link">
      <span class="fake-link">
        LÃ¦s mere
      </span>
      </div>
    </div>
  </div>
</a>
