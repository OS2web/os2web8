{%
  set classes = [
  node.bundle|clean_class,
  node.isPromoted() ? 'is-promoted',
  node.isSticky() ? 'is-sticky',
  not node.isPublished() ? 'is-unpublished',
  view_mode ? view_mode|clean_class,
]
%}
<div {{ attributes.addClass(classes) }}>
  <span class="createdtime">{{ node.getCreatedTime()|date("d M Y") }}</span>

  <h4><a href="{{ url }}">{{ label }}</a></h4>

  <div>
  {% if content %}
    {{ content }}
  {% elseif node.getType == 'os2web_page' %}
    {{ node.field_os2web_page_description.value|striptags|slice(0, 256) ~ '...' }}
  {% endif %}
  </div>

  <br>

  <div class="search-content-type">
    {{ node.type.entity.label }}
  </div>
</div>
