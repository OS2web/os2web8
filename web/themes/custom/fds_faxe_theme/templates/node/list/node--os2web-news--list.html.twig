{%
  set classes = [
  'element-wrapper-link',
  'row',
  'px-0',
  'py-4',
  node.bundle|clean_class,
  node.isPromoted() ? 'is-promoted',
  node.isSticky() ? 'is-sticky',
  not node.isPublished() ? 'is-unpublished',
  view_mode ? view_mode|clean_class,
]
%}
  <a href="{{ url }}" {{ attributes.addClass(classes) }} aria-label="{{ 'Read more about' | trans }} {{ node.field_os2web_news_heading.value }}">
    <div class="col-lg-4 col-12 entity-{{ view_mode|clean_class }}__image">
      {{ content.field_os2web_news_primaryimage }}
    </div>
  
    <div class="col-lg-8 col-12 py-6 entity-{{ view_mode|clean_class }}__body">
      {{ content.field_os2web_news_heading }}
  
      {{ content.field_os2web_news_article_date }}
  
      {# {% set text = content.field_os2web_news_description| render | striptags("<div><p><strong>") | raw  %} #}
      {% set text = content.field_os2web_news_description|render|striptags|replace({'&#13;': '\n', '&nbsp;': ' '})   %}
       {{ text }}
      <div class="field field--type-body">
       
      </div>
    </div>
  </a>
