{% set classes = [
  'banner',
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
] %}
{% block paragraph %}
    <div{{ attributes.addClass(classes) }} {% if background_image and not paragraph.field_os2web_banner_video.value %} style="background-image: url({{ background_image }})" {% endif %}>
        <div class="container">
            {% block content %}
                {% if paragraph.field_os2web_banner_heading.value or paragraph.field_os2web_banner_subheading.value or paragraph.field_os2web_banner_body.value or paragraph.field_os2web_banner_links.value %}
                    <div class="banner__box">

                        {% if paragraph.field_os2web_banner_heading.value %}
                            <div class="banner__heading">
                                {{ content.field_os2web_banner_heading }}
                            </div>
                        {% endif %}

                        {% if paragraph.field_os2web_banner_subheading.value or paragraph.field_os2web_banner_body.value %}
                            <div class="banner__body">
                                {{ content.field_os2web_banner_subheading }}
                                {{ content.field_os2web_banner_body }}
                            </div>
                        {% endif %}

                        {% if paragraph.field_os2web_banner_links.value %}
                            <div class="banner__actions">
                                {{ content.field_os2web_banner_links }}
                            </div>
                        {% endif %}

                    </div>
                {% endif %}

                {# Video Handling #}
                {% if paragraph.field_os2web_banner_video.entity is not empty %}
                    {% set video_url = paragraph.field_os2web_banner_video.entity.field_os2web_video.entity.uri.value|file_url %}
                    <div class="banner__video">
                        <video id="banner-video" autoplay muted loop>
                            <source src="{{ paragraph.field_os2web_banner_video.value }}" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                        <button class="custom-pause-button" onclick="togglePause()">Pause<span class="visually-hidden">Tryk her for at pause eller forts√¶tte videoen.</span></button>
                    </div>
                {% endif %}

            {% endblock %}
        </div>
    </div>
{% endblock paragraph %}

<script>
    function togglePause() {
        const video = document.getElementById('banner-video');
        if (video.paused) {
            video.play();
        } else {
            video.pause();
        }
    }
</script>

<style>
    .banner__video {
        position: relative;
    }
    .custom-pause-button {
        position: absolute;
        bottom: 10px;
        right: 10px;
        background-color: #000;
        color: #fff;
        border: none;
        padding: 10px;
        cursor: pointer;
    }
</style>